<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeLight" parent="Theme.Meteorix.Light">
        ...
        <!-- Customize common theme attributes here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DADADA</item>
        <item name="colorPrimaryVariant">#C1C1C1</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">@color/white_500</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/orange</item>

        <!-- Navigation bar color (only applicable if navigation bar is present) -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>

        <!-- Text color for primary and secondary content -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_500</item>

        <!-- Background color for content -->
        <item name="android:colorBackground">@color/white</item>

        <!-- CardView background color -->
        <item name="cardBackgroundColor">@color/white</item>

        <!-- Button background color -->
        <item name="colorButtonNormal">@color/blue_500</item>



    </style>

    <style name="AppThemeDark" parent="Theme.Meteorix.Dark">
        ...
        <!-- Customize common theme attributes here -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorTertiary">@color/orange</item>
        <item name="colorTertiaryContainer">@color/darkGray</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/purple_700</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Text color for TextView and EditText. -->
        <item name="android:textColor">@color/white</item>

        <!-- Color for disabled text, such as disabled EditText. -->
        <item name="android:textColorSecondary">@color/white_70</item>

        <!-- Color for ripple effect. -->
        <item name="android:colorControlHighlight">@color/white_30</item>

        <!-- Color for buttons. -->
        <item name="colorButtonNormal">@color/purple_700</item>

        ...
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.Meteorix.Dark" parent="Theme.MaterialComponents.DayNight">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/purple_700</item>

        <!-- Background color. -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Text color for TextView and EditText. -->
        <item name="android:textColor">@color/white</item>

        <!-- Color for disabled text, such as disabled EditText. -->
        <item name="android:textColorSecondary">@color/white_70</item>

        <!-- Color for ripple effect. -->
        <item name="android:colorControlHighlight">@color/white_30</item>

        <!-- Color for buttons. -->
        <item name="colorButtonNormal">@color/purple_700</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/white_70</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white_30</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
